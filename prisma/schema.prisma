generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")

}

model User {
  // MongoDB ID: stored as _id in MongoDB and represented as a String in Prisma
  id                  String     @id @map("_id") @default(auto()) @db.ObjectId
  first_name          String
  last_name           String?
  email               String     @unique
  password            String
  contact_number      String?
  profile_pic         String?
  status              UserStatus @default(ACTIVE)
  role                UserRole   @default(USER)
  is_deleted          Boolean    @default(false)
  password_changed_at DateTime   @default(now())
  created_at          DateTime   @default(now())
  updated_at          DateTime   @updatedAt

  // NOTE: relational object fields removed for MongoDB migration.
  // Keep foreign key scalar fields on related models (e.g. user_id on Campaign, File, etc.)

  @@map("users")
}
model Thread {
  id           String     @id @map("_id") @default(auto()) @db.ObjectId
  type         ThreadType @default(DIRECT)
  name         String?    // Optional name for the thread
  member_count Int        @default(0) // Member count for the thread
  unread_count Int        @default(0)
  created_at   DateTime   @default(now())
  updated_at   DateTime   @updatedAt

  // relational object fields removed; use thread_id fields on related models instead

  @@map("threads")
}

model ThreadParticipant {
  id        String @id @map("_id") @default(auto()) @db.ObjectId
  thread_id String @db.ObjectId
  user_id   String @db.ObjectId

  // Removed @relation annotations (SQL-specific). Keep scalar foreign keys for lookups.

  @@unique([thread_id, user_id])
  @@map("thread_participants")
}

